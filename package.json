{
  "name": "@txch/tcds",
  "version": "3.0.0",
  "description": "Texas Children's Design System",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/tcds-identity",
    "packages/tcds-foundation",
    "packages/tcds-components"
  ],
  "scripts": {
    "build": "wireit",
    "build:identity": "wireit",
    "build:foundation": "wireit",
    "build:components": "wireit",
    "build:tcds": "wireit",
    "clean": "wireit",
    "format": "prettier --write \"**/*.{js,json,scss,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,scss,css,md}\"",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint --fix \"**/*.js\""
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:identity",
        "build:foundation",
        "build:components",
        "build:tcds"
      ]
    },
    "build:identity": {
      "command": "npm run build --workspace=packages/tcds-identity",
      "files": [
        "packages/tcds-identity/src/**",
        "packages/tcds-identity/scripts/**",
        "packages/tcds-identity/package.json"
      ],
      "output": [
        "packages/tcds-identity/dist/**"
      ]
    },
    "build:foundation": {
      "command": "npm run build --workspace=packages/tcds-foundation",
      "dependencies": [
        "build:identity"
      ],
      "files": [
        "packages/tcds-foundation/src/**",
        "packages/tcds-foundation/package.json"
      ],
      "output": [
        "packages/tcds-foundation/dist/**"
      ]
    },
    "build:components": {
      "command": "npm run build --workspace=packages/tcds-components",
      "dependencies": [
        "build:foundation"
      ],
      "files": [
        "packages/tcds-components/src/**",
        "packages/tcds-components/rollup.config.js",
        "packages/tcds-components/package.json"
      ],
      "output": [
        "packages/tcds-components/dist/**"
      ]
    },
    "build:tcds": {
      "command": "node scripts/aggregate-dist.js",
      "dependencies": [
        "build:identity",
        "build:foundation",
        "build:components"
      ],
      "files": [
        "packages/tcds-identity/dist/**",
        "packages/tcds-foundation/dist/**",
        "packages/tcds-components/dist/**",
        "scripts/aggregate-dist.js"
      ],
      "output": [
        "dist/**"
      ],
      "clean": "if-file-deleted"
    },
    "clean": {
      "command": "rimraf dist packages/*/dist .wireit"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacecotton/tcds.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jacecotton/tcds/issues"
  },
  "homepage": "https://github.com/jacecotton/tcds#readme",
  "dependencies": {
    "@txch/tcds-components": "^3.0.0",
    "@txch/tcds-foundation": "^3.0.0",
    "@txch/tcds-identity": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "wireit": "^0.14.12"
  }
}
