{
  "name": "@txch/tcds",
  "version": "3.0.0",
  "description": "Texas Children's Design System",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/tokens",
    "packages/media",
    "packages/foundation",
    "packages/components"
  ],
  "scripts": {
    "build:tokens": "npm run build --workspace=packages/tokens",
    "build:media": "npm run build --workspace=packages/media",
    "build:foundation": "npm run build --workspace=packages/foundation",
    "build:components": "npm run build --workspace=packages/components",
    "build": "npm run build:tokens && npm run build:media && npm run build:foundation && npm run build:components",
    "postinstall": "node scripts/cleanup-assets.js && node scripts/copy-assets.js && node packages/foundation/build/config.js && npm run build",
    "preuninstall": "node scripts/cleanup-assets.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacecotton/tcds.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jacecotton/tcds/issues"
  },
  "homepage": "https://github.com/jacecotton/tcds#readme",
  "dependencies": {
    "@txch/components": "^3.0.0",
    "@txch/foundation": "^3.0.0",
    "@txch/media": "^3.0.0",
    "@txch/tokens": "^3.0.0"
  }
}
