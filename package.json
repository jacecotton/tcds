{
  "name": "@txch/tcds",
  "version": "3.0.0",
  "description": "Texas Children's Design System",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/tcds-identity",
    "packages/tcds-foundation",
    "packages/tcds-components",
    "docs"
  ],
  "scripts": {
    "build": "npm run build:identity && npm run build:foundation && npm run build:components && node scripts/aggregate-dist.js",
    "build:identity": "npm run build --workspace=packages/tcds-identity",
    "build:foundation": "npm run build --workspace=packages/tcds-foundation",
    "build:components": "npm run build --workspace=packages/tcds-components",
    "dev": "npm-run-all --parallel dev:*",
    "dev:identity": "npm run dev --workspace=packages/tcds-identity",
    "dev:foundation": "npm run dev --workspace=packages/tcds-foundation",
    "dev:components": "npm run dev --workspace=packages/tcds-components",
    "dev:docs": "npm run dev --workspace=docs",
    "dev:watch": "node scripts/watch.js",
    "clean": "rimraf dist packages/*/dist .wireit",
    "format": "prettier --write \"**/*.{js,json,scss,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,scss,css,md}\"",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint --fix \"**/*.js\"",
    "lint:html": "htmlhint \"**/*.html\" \"**/*.njk\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacecotton/tcds.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jacecotton/tcds/issues"
  },
  "homepage": "https://github.com/jacecotton/tcds#readme",
  "dependencies": {
    "@txch/tcds-components": "^3.0.0",
    "@txch/tcds-foundation": "^3.0.0",
    "@txch/tcds-identity": "^3.0.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "htmlhint": "^1.7.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
