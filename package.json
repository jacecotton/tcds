{
  "name": "@txch/tcds",
  "version": "3.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "clean": "rimraf dist components src/**/_gen",
    "build:icons": "cpx \"src/images/icons/**/*.svg\" dist/images/icons && node scripts/generate-icon-tokens.js",
    "build:tokens": "node scripts/build-tokens.js",
    "build:fonts": "cpx \"src/fonts/**/*.woff2\" dist/fonts",
    "build:css": "sass --load-path=node_modules --source-map src/scss:dist/css",
    "build:js": "rollup -c rollup.config.js",
    "build:components:assets": "cpx \"src/components/**/*.{twig,component.yml}\" components",
    "build:components:css": "sass --load-path=node_modules --style=compressed --source-map src/components:components",
    "build": "npm run build:icons && npm run build:tokens && npm run build:fonts && npm run build:css && npm run build:js && npm run build:components:assets && npm run build:components:css",
    "watch": "chokidar \"src/**/*.{js,css,scss,svg,woff2,twig,component.yml}\" -i \"src/**/_gen/**\" -c \"npm run build\"",
    "start:docs": "npm run start -w tcds-docs",
    "dev": "npm run clean && npm run build && run-p start:docs watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "chokidar-cli": "^3.0.0",
    "cpx2": "^8.0.0",
    "lit": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "rollup-plugin-lit-css": "^6.0.0",
    "sass": "^1.95.0",
    "style-dictionary": "^5.1.1"
  }
}
