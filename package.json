{
  "name": "@txch/tcds",
  "version": "3.0.0",
  "description": "Texas Children's Design System",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/tcds-identity",
    "packages/tcds-foundation",
    "packages/tcds-components"
  ],
  "scripts": {
    "build:identity": "npm run build --workspace=packages/tcds-identity",
    "build:foundation": "npm run build --workspace=packages/tcds-foundation",
    "build:components": "npm run build --workspace=packages/tcds-components",
    "build": "npm run build:identity && npm run build:foundation && npm run build:components",
    "postinstall": "node scripts/cleanup-assets.js && node scripts/copy-assets.js && node packages/foundation/build/config.js && npm run build",
    "preuninstall": "node scripts/cleanup-assets.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacecotton/tcds.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jacecotton/tcds/issues"
  },
  "homepage": "https://github.com/jacecotton/tcds#readme",
  "dependencies": {
    "@txch/tcds-components": "^3.0.0",
    "@txch/tcds-foundation": "^3.0.0",
    "@txch/tcds-identity": "^3.0.0"
  }
}
