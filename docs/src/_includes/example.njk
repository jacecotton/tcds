{% macro render(open=false) %}
<div class="example">
  <div class="example__result">
    {{ caller() }}
  </div>
  <div class="example__code">
    <details {{ "open" if open }}>
      <summary>Show code</summary>
      <pre><code>
        {{ caller()|forceescape }}
      </code></pre>
    </details>
  </div>
</div>
{% endmacro %}
