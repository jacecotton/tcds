<tcds-carousel {{ playing ? "playing timing='#{timing}'"}} {{ multiple ? "multiple"}}>
  {% for slide in slides %}
    <tcds-slide {{ slide.selected ? "selected" }}>
      {{ slide.content ? slide.content }}

      {% if block(slide.block) is defined %}
        {{ block(slide.block) }}
      {% endif %}
    </tcds-slide>
  {% endfor %}
</tcds-carousel>