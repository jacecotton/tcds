<tcds-carousel {{ timing ? "timing=#{timing} #{playing ? 'playing'}" }} {{ multiple ? "multiple" }}>
  {% for slide in slides %}
    <tcds-slide {{ slide.selected ? "selected" }}>
      {{ slide.content ?: null }}

      {% if block(slide.block) is defined %}
        {{ block(slide.block) }}
      {% endif %}
    </tcds-slide>
  {% endfor %}
</tcds-carousel>
