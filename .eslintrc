{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["dist"],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, { "ignoredNodes": ["TemplateLiteral *"], "SwitchCase": 1 }],
    "function-paren-newline": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double", {
      "allowTemplateLiterals": true,
      "avoidEscape": true
    }],
    "semi": ["error", "always"],
    "no-var": "error",
    "curly": "error",
    "no-new": "warn",
    "eol-last": ["error", "always"]
  }
}
