{
  "name": "@txch/components",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:all",
    "build:all": "npm run build:js & npm run build:scss & npm run build:twig & wait",
    "build:js": "rollup -c rollup.config.js",
    "build:scss": "sass src:dist --load-path=../../node_modules --style=expanded --no-source-map",
    "build:twig": "cpx 'src/**/*.{twig,libraries.yml}' dist",
    "dev": "npm run dev:js & npm run dev:scss & npm run dev:twig",
    "dev:js": "rollup -c rollup.config.js --watch",
    "dev:scss": "sass --watch src:dist --load-path=../../node_modules --style=expanded --no-source-map",
    "dev:twig": "cpx 'src/**/*.{twig,libraries.yml}' dist --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@txch/foundation": "^3.0.0",
    "@txch/identity": "^3.0.0",
    "cpx2": "^8.0.0",
    "lit": "^3.3.1",
    "rollup": "^4.44.2",
    "rollup-plugin-lit-css": "^6.0.0",
    "sass": "^1.94.2",
    "terser": "^5.43.1"
  }
}
