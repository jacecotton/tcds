{
  "name": "@txch/tcds-identity",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:fonts && npm run build:icons && npm run build:logos && npm run build:tokens",
    "build:fonts": "cpx 'src/fonts/**/*' dist/fonts",
    "build:icons": "cpx 'src/icons/**/*' dist/images/icons && node scripts/create-icon-manifest.js",
    "build:logos": "cpx 'src/logos/**/*' dist/images/logos",
    "build:tokens": "node scripts/build-tokens.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:fonts": "cpx 'src/fonts/**/*' dist/fonts --watch",
    "dev:icons": "cpx 'src/icons/**/*' dist/images/icons --watch",
    "dev:logos": "cpx 'src/logos/**/*' dist/images/logos --watch"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "rimraf": "^6.0.1",
    "style-dictionary": "^5.1.0"
  }
}
