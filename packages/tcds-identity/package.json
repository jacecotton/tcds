{
  "name": "@txch/tcds-identity",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "clean": "wireit",
    "build": "wireit",
    "build:fonts": "wireit",
    "build:icons": "wireit",
    "build:logos": "wireit",
    "build:tokens": "wireit"
  },
  "wireit": {
    "clean": {
      "command": "rimraf dist"
    },
    "build": {
      "dependencies": [
        "build:fonts",
        "build:icons",
        "build:logos",
        "build:tokens"
      ]
    },
    "build:fonts": {
      "command": "cpx 'src/fonts/**/*' dist/fonts",
      "files": [
        "src/fonts/**/*"
      ],
      "output": [
        "dist/fonts/**"
      ]
    },
    "build:icons": {
      "command": "cpx 'src/icons/**/*' dist/images/icons && node scripts/create-icon-manifest.js",
      "files": [
        "src/icons/**/*",
        "scripts/create-icon-manifest.js"
      ],
      "output": [
        "dist/images/icons/**"
      ]
    },
    "build:logos": {
      "command": "cpx 'src/logos/**/*' dist/images/logos",
      "files": [
        "src/logos/**/*"
      ],
      "output": [
        "dist/images/logos/**"
      ]
    },
    "build:tokens": {
      "command": "node scripts/build-tokens.js",
      "files": [
        "src/tokens/**",
        "scripts/build-tokens.js"
      ],
      "output": [
        "dist/tokens/**"
      ]
    }
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "rimraf": "^6.0.1",
    "style-dictionary": "^5.1.0"
  }
}
