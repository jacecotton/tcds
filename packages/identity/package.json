{
  "name": "@txch/identity",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:fonts && npm run build:icons && npm run build:logos && npm run build:tokens",
    "build:fonts": "cpx 'src/fonts/**/*' dist/fonts",
    "build:icons": "cpx 'src/images/icons/**/*' dist/images/icons && node scripts/generate-icon-tokens.js",
    "build:logos": "cpx 'src/images/logos/**/*' dist/images/logos",
    "build:tokens": "node scripts/build-tokens.js",
    "dev": "npm run dev:fonts & npm run dev:icons & npm run dev:logos & wait",
    "dev:fonts": "cpx 'src/fonts/**/*' dist/fonts --watch",
    "dev:icons": "cpx 'src/images/icons/**/*' dist/images/icons --watch",
    "dev:logos": "cpx 'src/images/logos/**/*' dist/images/logos --watch"
  },
  "devDependencies": {
    "cpx2": "^8.0.0",
    "style-dictionary": "^5.1.0"
  }
}
