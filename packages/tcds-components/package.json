{
  "name": "@txch/tcds-components",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:all",
    "build:all": "npm run build:js & npm run build:scss & npm run build:assets & wait",
    "build:js": "rollup -c rollup.config.js",
    "build:scss": "node scripts/build-scss.js",
    "build:assets": "node scripts/copy-assets.js",
    "dev": "npm run dev:js & npm run dev:scss & npm run dev:assets",
    "dev:js": "rollup -c rollup.config.js --watch",
    "dev:scss": "node scripts/build-scss.js --watch",
    "dev:assets": "node scripts/copy-assets.js --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-class-static-block": "^7.28.3",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@txch/tcds-foundation": "^3.0.0",
    "@txch/tcds-identity": "^3.0.0",
    "chokidar": "^4.0.3",
    "lit": "^3.3.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.2",
    "rollup-plugin-lit-css": "^6.0.0",
    "sass": "^1.94.2",
    "terser": "^5.43.1"
  },
  "peerDependencies": {
    "lit": "^3.3.1"
  }
}
