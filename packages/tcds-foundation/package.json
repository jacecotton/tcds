{
  "name": "@txch/tcds-foundation",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "clean": "wireit",
    "build": "wireit",
    "build:scss": "wireit",
    "check-build-gzip": "gzip -c dist/foundation.css | wc -c"
  },
  "wireit": {
    "clean": {
      "command": "rimraf dist"
    },
    "build": {
      "dependencies": [
        "build:scss"
      ]
    },
    "build:scss": {
      "command": "sass --load-path=../../node_modules --style=compressed --source-map src:dist",
      "dependencies": [
        "clean",
        "../tcds-identity:build:icons"
      ],
      "files": [
        "src/**/*.scss"
      ],
      "output": [
        "dist/**/*.css",
        "dist/**/*.css.map"
      ],
      "clean": "if-file-deleted"
    }
  },
  "devDependencies": {
    "@txch/tcds-identity": "^3.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-replace": "^2.0.1",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2"
  }
}