{
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 120,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "quoteProps": "as-needed",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "printWidth": 120,
                "singleQuote": false
            }
        },
        {
            "files": "*.css",
            "options": {
                "printWidth": 120
            }
        }
    ]
}