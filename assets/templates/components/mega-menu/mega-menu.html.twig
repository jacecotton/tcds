{% extends "@tcds/components/component/component.html.twig" %}

{% set component_name = "MegaMenu" %}

{% set root_element = "section" %}

{% block root_attributes %}
  id="mega-menu-{{ id|clean_id }}"
  aria-labelledby="{{ id|clean_id }}"
  hidden
{% endblock %}

{% block inner_content %}
  <div class="max-width">
    <tcds-button icon="only chevron-left" round color="ghost" class="site-header__open-menu" controls="mega-menu-{{ id|clean_id }}">Dismiss submenu</tcds-button>
    {% block content %}{% endblock %}
  </div>
{% endblock %}
