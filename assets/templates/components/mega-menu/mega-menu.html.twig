{% extends "@tcds/components/component/component.html.twig" %}

{% set component_name = "MegaMenu" %}

{% set root_element = "section" %}

{% block root_attributes %}
  id="mega-menu-{{ id|clean_id }}"
  hidden
{% endblock %}

{% block inner_content %}
  {{ include("@tcds/components/button/button.html.twig", {
    label: "Dismiss submenu",
    icon: "chevron-left",
    controls: "mega-menu#{id|clean_id}",
    modifiers: ["icon-only", "ghost", "round"],
  }, with_context = false) }}

  <div class="max-width">
    {% block content %}{% endblock %}
  </div>
{% endblock %}
